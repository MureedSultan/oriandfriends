extends layout

block content
  header(class='h-100 index' id='grain')
    div(class='background h-100 w-100' data-vide-bg="/videos/background.mp4" data-vide-options="posterType: png, loop: true, muted: true, position: 0% 0%")
    div(class='container')
      div(class='row align-items-center h-100')
        div(class='col-lg ear')
          include ../public/images/logo/ear.svg
        div(class='col-lg')
          img(src='/images/logo/white.png' class='logo')
        div(class='col-lg eye')
          include ../public/images/logo/eye.svg
